---
import { Icon } from "astro-icon";

/**
	Uses https://github.com/natemoo-re/astro-icon#readme
	Find icons @ https://icones.js.org/
*/
const socialLinks: Array<{
	name: string;
	friendlyName: string;
	link: string;
	isWebmention?: boolean;
}> = [
	{
		name: "mdi:github",
		friendlyName: "Github",
		link: "https://github.com/Magren0321",
	},
	{
		name: "mdi:email",
		friendlyName: "email",
		link: "mailto:zhuhenglin21@gmail.com",
		isWebmention: true,
	},
  {
    name: "mdi:twitter",
    friendlyName: "Twitter",
    link: "https://twitter.com/Magren_lin",
  },
  {
    name : "mdi:telegram",
    friendlyName: "Telegram",
    link: "https://t.me/Magren_lin",
  },
  {
    name: "mdi:rss",
    friendlyName: "RSS",
    link: "/rss.xml",
  },
];
---

<div class="flex flex-wrap items-end gap-x-4 mt-5">
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ link, name, friendlyName, isWebmention }) => (
				<li class="flex">
					<a
						class="inline-block p-1 hover:text-accent"
						href={link}
						target="_blank"
						rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
					>
						<Icon class="h-6 w-6" name={name} aria-hidden="true" focusable="false" />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
